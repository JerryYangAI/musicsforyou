# 数据库配置（必需）
# 使用 Neon Database 或其他 PostgreSQL 数据库
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Session 密钥（必需，用于会话加密）
SESSION_SECRET=your-secret-key-change-in-production

# Stripe 支付配置（可选，用于支付功能）
# 生产环境
STRIPE_SECRET_KEY=sk_live_...
# 测试环境
TESTING_STRIPE_SECRET_KEY=sk_test_...

# 邮件服务配置（可选，用于管理员邮件通知）
RESEND_API_KEY=re_...
ADMIN_NOTIFICATION_EMAIL=admin@example.com

# 对象存储配置（可选，用于文件上传）
PRIVATE_OBJECT_DIR=music/

# 服务器端口（可选，默认 5000）
PORT=5000

# Google Analytics（可选，前端使用）
VITE_GA_MEASUREMENT_ID=G-...

# Suno AI 音乐生成配置（必需，用于音乐生成功能）
# 官方Suno API: https://sunoapi.org
# 获取API密钥: https://sunoapi.org (注册账号后获取)
SUNO_API_KEY=75731e8721a3a3daed924f486c3dbf11
SUNO_API_URL=https://api.sunoapi.org

# Redis 配置（必需，用于任务队列）
REDIS_URL=redis://localhost:6379
# 如果Redis需要密码，取消下面的注释
# REDIS_PASSWORD=your_redis_password

# 任务队列配置（可选）
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
